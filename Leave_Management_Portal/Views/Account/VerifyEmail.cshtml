@using Leave_Management_Portal.ViewModels;
@model VerifyEmailViewModel;
@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}



<div class="account-container d-flex align-items-center justify-content-center p-3">
    <div class="account-box card border-0 rounded-4 p-4">
        <div class="text-center mb-4">
            <div class="mb-3">
                <i class="fas fa-envelope-open-text text-primary" style="font-size: 3rem; background: linear-gradient(135deg, #667eea, #764ba2); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;"></i>
            </div>
            <h2 class="fw-bold">Verify Email</h2>
            <p class="text-muted mb-0">Enter your email address to reset your password</p>
        </div>

        <form asp-action="VerifyEmail" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

            <div class="verify-info alert rounded-3 mb-3">
                <div class="d-flex align-items-start">
                    <i class="fas fa-info-circle text-primary me-2 mt-1"></i>
                    <div class="small">
                        <strong>Password Reset Process:</strong><br>
                        Enter your registered email address and we'll send you a secure link to reset your password.
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="form-label fw-semibold">
                    <i class="fas fa-envelope me-1"></i>Email Address
                </label>
                <input asp-for="Email" class="form-control rounded-3" placeholder="Enter your registered email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success rounded-3 py-2">
                    <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                </button>
            </div>

            <p class="text-center text-muted mb-3 small">
                Remember your password? 
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-semibold">
                    <i class="fas fa-sign-in-alt me-1"></i>Back to Login
                </a>
            </p>

            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">
                    <i class="fas fa-arrow-left me-1"></i>Back to Home
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
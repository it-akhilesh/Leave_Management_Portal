@using Leave_Management_Portal.ViewModels;
@model ChangePasswordViewModel;
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}



<div class="account-container d-flex align-items-center justify-content-center p-3">
    <div class="account-box card border-0 rounded-4 p-4">
        <div class="text-center mb-4">
            <div class="mb-3">
                <i class="fas fa-key text-primary" style="font-size: 3rem; background: linear-gradient(135deg, #667eea, #764ba2); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;"></i>
            </div>
            <h2 class="fw-bold">Change Password</h2>
            <p class="text-muted mb-0">Create a new secure password for your account</p>
        </div>
        
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">
                    <i class="fas fa-envelope me-1"></i>Email Address
                </label>
                <input asp-for="Email" class="form-control rounded-3 bg-light" readonly />
                <div class="form-text">
                    <i class="fas fa-info-circle me-1"></i>This email cannot be changed
                </div>
            </div>
            
            <div class="password-requirements alert rounded-3 mb-3">
                <div class="d-flex align-items-start">
                    <i class="fas fa-shield-alt text-primary me-2 mt-1"></i>
                    <div class="small">
                        <strong>Password Requirements:</strong><br>
                        • At least 8 characters long<br>
                        • Include uppercase and lowercase letters<br>
                        • Contains at least one number<br>
                        • Include at least one special character
                    </div>
                </div>
            </div>
            
            <div class="mb-3 position-relative">
                <label asp-for="NewPassword" class="form-label fw-semibold">
                    <i class="fas fa-lock me-1"></i>New Password
                </label>
                <input asp-for="NewPassword" type="password" class="form-control rounded-3" id="newPassword" />
                <button type="button" class="password-toggle-btn" onclick="togglePassword('newPassword', 'newPasswordIcon')">
                    <i class="fas fa-eye" id="newPasswordIcon"></i>
                </button>
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>
            
            <div class="mb-4 position-relative">
                <label asp-for="ConfirmNewPassword" class="form-label fw-semibold">
                    <i class="fas fa-lock me-1"></i>Confirm New Password
                </label>
                <input asp-for="ConfirmNewPassword" type="password" class="form-control rounded-3" id="confirmPassword" />
                <button type="button" class="password-toggle-btn" onclick="togglePassword('confirmPassword', 'confirmPasswordIcon')">
                    <i class="fas fa-eye" id="confirmPasswordIcon"></i>
                </button>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
            </div>
            
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success rounded-3 py-2">
                    <i class="fas fa-save me-2"></i>Update Password
                </button>
            </div>
            
            <p class="text-center text-muted mb-3 small">
                Changed your mind? 
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-semibold">
                    <i class="fas fa-sign-in-alt me-1"></i>Back to Login
                </a>
            </p>
            
            <div class="text-center">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none text-muted">
                    <i class="fas fa-arrow-left me-1"></i>Back
                </a>
            </div>
        </form>
    </div>
</div>

<script>
function togglePassword(fieldId, iconId) {
    const passwordField = document.getElementById(fieldId);
    const icon = document.getElementById(iconId);
    
    if (passwordField.type === 'password') {
        passwordField.type = 'text';
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
    } else {
        passwordField.type = 'password';
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
    }
}

// Password strength indicator
document.addEventListener('DOMContentLoaded', function() {
    const newPasswordField = document.getElementById('newPassword');
    const confirmPasswordField = document.getElementById('confirmPassword');
    
    newPasswordField.addEventListener('input', function() {
        const password = this.value;
        // You can add password strength validation here
    });
    
    confirmPasswordField.addEventListener('input', function() {
        const newPassword = newPasswordField.value;
        const confirmPassword = this.value;
        
        if (newPassword && confirmPassword && newPassword !== confirmPassword) {
            this.classList.add('is-invalid');
        } else {
            this.classList.remove('is-invalid');
        }
    });
});
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
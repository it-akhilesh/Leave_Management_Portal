@using Leave_Management_Portal.ViewModels;
@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<div class="account-container d-flex align-items-center justify-content-center p-3">
    <div class="account-box card border-0 rounded-4 p-4">
        <!-- Success message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success rounded-3 ">
                @TempData["SuccessMessage"]
            </div>
        }
        <h2 class="text-center mb-4 fw-bold">Login</h2>
        <form asp-action="Login" method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control rounded-3" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" class="form-control rounded-3" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label class="form-check-label">
                        @Html.DisplayNameFor(a => a.RememberMe)
                    </label>
                </div>
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">
                    Forgot Password?
                </a>
            </div>

            <div class="d-grid mb-3">
                <input type="submit" value="Login" class="btn btn-success rounded-3 py-2" />
            </div>

            <p class="text-center mb-3">
                Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none fw-semibold">Register</a>
            </p>

            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                    <i class="fas fa-arrow-left me-1"></i>Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}